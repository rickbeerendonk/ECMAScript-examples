{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Server",
      "type": "shell",
      "command": "if [[ \"${file}\" == *.js ]]; then node \"${file}\"; else npm run openserver -- \"${file}\"; fi",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "if ($env:file -match '\\.js$') { node $env:file } else { npm run openserver -- $env:file }"
        ]
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false
      }
    }
  ]
}
